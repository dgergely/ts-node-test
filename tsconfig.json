{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "newLine": "lf",
    "baseUrl": ".",
    "preserveSymlinks": true,
    "strictNullChecks": true,
    "paths": {
      "@aifleet-tsnode/a": ["packages/a/src"],
      "@aifleet-tsnode/b": ["packages/b/src"]
    }
  },
  "lib": [
    "ES2020"
  ],
  "exclude": [".yarn/**/*", "**/node_modules", "**/.*/"]
}